# Copy this file to `.env` and fill in the values.

# OpenAI Configuration (for local GPT mode)
OPENAI_API_KEY=sk-your-openai-key
OPENAI_BASE_URL=https://api.openai.com/v1
GPT_MINI_MODEL=gpt-4o-mini
OPENAI_MODEL=gpt-4o-mini

# Hercules GPU Server Configuration
# Set USE_HERCULES=true to run Whisper and LLM on the Hercules server
USE_HERCULES=false
HERCULES_URL=http://172.26.12.7:8000

# Hercules LLM settings (uses Ollama)
USE_HERCULES_LLM=false
OLLAMA_MODEL=ministral-3b:14b
